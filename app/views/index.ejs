<header>
    <nav class="top-bar">
    <ul class="title-area">
        <!-- Title Area -->
        <li class="name">
            <h1><a href="#">Collins Dictionary </a></h1>
        </li>
        <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
        <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>
    </nav>
</header>
<div class="row"  ng-controller="Dict">
    <div class="large-4 columns">
        <div class="row">
            <div class="large-12 columns searchbar" wildcard="word:searchword">
                <input type="text" ng-model="word"  placeholder="Search Your Word" />
                <small>Invalid Search Word</small>
            </div>
        </div>
        <div class="row">
            <ul class="wordlist" >
                <li ng-repeat="word in wordlist | regexp:searchword | orderBy:'length'| limitTo:50">
                    <a live="#/{{word}}" href="#/{{word}}">{{word}}</a>
                </li>
            </ul>
        </div>

    </div>
    <div class="large-8 columns">
        <div ng-view></div>
    </div>
</div>
<footer>
